<style>
    /*green blogger form popup*/
    .gb_page_overlay{
        display: none;
        position: fixed;
        z-index: 1001;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: auto;
        background: rgba(0, 0, 0, 0.4);
    }

    .gb_popup_details_container{
        display: none;
        position: absolute;
        z-index: 1001;
        margin: auto;
        top: 45px;
        right: 0;
        left: 0;
        background: white;
        height: -moz-max-content;
        height: -webkit-max-content;
        height: max-content;
        width: 500px;
        border-radius: 2px;
        border: solid 1px #7ac943;
    }

    .gb_popup_details_container .close_popup{
        position: absolute;
        top: -6px;
        right: -5px;
        font-size: 20px;
        color: red;
        cursor: pointer;
    }

    .gb_popup_details_container_inner{ padding: 20px; }

    .gb_popup_details_container_inner table{ margin-bottom: 0; }

    .gb_popup_details_container_inner .form-control{border-radius: 2px !important;}

    .gb_popup_details_container_inner .form-group label.control-label{ text-align: unset !important; }

    .gb_popup_details_container_inner .form-group button{ width: 100%; }

    #gb_article_content{width: 100% !important;}

    #notif_pub{
        padding: 10px;
        width:100%;
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
    }
    #notif_pub.success{background: green !important; color:white;}
    #notif_pub.error{background: red !important; color:white;}
</style>

<div class="gb_page_overlay" onclick="closeGBPopup()">
</div>
<div class="gb_popup_details_container">
    <i class="fa fa-times-circle close_popup" aria-hidden="true" onclick="closeGBPopup()"></i>
    <div class="gb_popup_details_container_inner">

        <div >
            <h2><strong><center>Green Blogger</center></strong></h2>
            <form id="gb_posts_form" class="form-horizontal" method="post">
                <div class="form-group">
                    <label class="control-label col-sm-12" for="gb_name">Nom:</label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="gb_name" placeholder="Enter votre nom" name="gb_name" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-12" for="gb_email">Email:</label>
                    <div class="col-sm-12">
                        <input type="email" class="form-control" id="gb_email" placeholder="Entrer votre email" name="gb_email" required>
                    </div>
                </div>
                <h3><center><strong>Article</strong></center></h3>
                <div class="form-group">
                    <label class="control-label col-sm-12" for="gb_article_title">Title:</label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="gb_article_title" placeholder="" name="gb_article_title" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-12" for="gb_article_content">Content:</label>
                    <div class="col-sm-12">
                        <textarea class="form-control" rows="10" name="gb_article_content" id="gb_article_content" required></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-12" for="gb_article_project">Projet:</label>
                    <div class="col-sm-12">
                        <select class="form-control" id="gb_article_project" name="gb_article_project">
                            <option value=""></option>
                            {% for project in projects %}
                            <option value="{{ project.id }}">{{ project.nom }}</option>
                            {% endfor %}

                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class=" col-sm-12">
                        <button type="submit" class="btn btn-default">Envoyer</button>
                    </div>
                </div>
            </form>
            <div id="notif_pub"></div>

        </div>

    </div>
</div>